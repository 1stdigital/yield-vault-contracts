{
    "name": "@1stdigital/sfdusd-contracts",
    "version": "1.0.0",
    "description": "Smart contracts for sFDUSD Yield Vault system",
    "main": "index.js",
    "scripts": {
        "build": "hardhat compile",
        "typechain": "hardhat typechain",
        "node": "hardhat node",
        "dev": "hardhat node",
        "clean": "hardhat clean",
        "size": "hardhat size-contracts",
        "flatten": "hardhat flatten",
        "lint": "solhint 'src/**/*.sol'",
        "lint:fix": "solhint 'src/**/*.sol' --fix",
        "test": "hardhat test",
        "test:security": "hardhat test test/Security.test.js",
        "test:gas": "REPORT_GAS=true hardhat test test/GasOptimization.test.js",
        "test:edge": "hardhat test test/EdgeCases.test.js",
        "test:main": "hardhat test test/ERC4626YieldVault.test.js",
        "test:coverage": "hardhat coverage",
        "test:all": "hardhat test --parallel",
        "test:watch": "hardhat test --watch",
        "deploy:base-token": "hardhat run src/scripts/deploy-base-token.js",
        "deploy:vault": "hardhat run src/scripts/deploy-vault.js",
        "deploy:complete": "hardhat run src/scripts/deploy.js",
        "deploy:demo": "hardhat run src/scripts/deploy-complete-demo.js",
        "setup:demo": "hardhat run src/scripts/setup-demo.js",
        "setup:roles": "hardhat run src/scripts/setup-roles.js",
        "verify:contracts": "hardhat run src/scripts/verify-contracts.js",
        "check:deployment": "hardhat run src/scripts/check-new-deployment.js",
        "check:roles": "hardhat run src/scripts/check-vault-roles.js",
        "deploy:base-token:testnet": "hardhat run src/scripts/deploy-base-token.js --network bscTestnet",
        "deploy:vault:testnet": "hardhat run src/scripts/deploy-vault.js --network bscTestnet",
        "deploy:complete:testnet": "hardhat run src/scripts/deploy.js --network bscTestnet",
        "deploy:demo:testnet": "hardhat run src/scripts/deploy-complete-demo.js --network bscTestnet",
        "setup:demo:testnet": "hardhat run src/scripts/setup-demo.js --network bscTestnet",
        "setup:roles:testnet": "hardhat run src/scripts/setup-roles.js --network bscTestnet",
        "verify:contracts:testnet": "hardhat run src/scripts/verify-contracts.js --network bscTestnet",
        "check:deployment:testnet": "hardhat run src/scripts/check-new-deployment.js --network bscTestnet",
        "check:roles:testnet": "hardhat run src/scripts/check-vault-roles.js --network bscTestnet"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.9.6",
        "@openzeppelin/contracts-upgradeable": "^4.9.6"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
        "@nomicfoundation/hardhat-verify": "^2.0.14",
        "@openzeppelin/hardhat-defender": "^2.0.0",
        "@openzeppelin/hardhat-upgrades": "^3.0.0",
        "@shardlabs/starknet-hardhat-plugin": "^0.8.0-alpha.5",
        "@typechain/ethers-v6": "^0.5.0",
        "@typechain/hardhat": "^9.0.0",
        "chai": "^4.3.7",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "ethers": "^6.4.0",
        "hardhat": "^2.19.0",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-gas-reporter": "^1.0.9",
        "solhint": "^4.0.0",
        "solidity-coverage": "^0.8.4",
        "typechain": "^8.3.0"
    },
    "keywords": [
        "solidity",
        "smart-contracts",
        "evm",
        "stablecoin",
        "defi",
        "openzeppelin",
        "sfdusd",
        "yield-vault"
    ],
    "author": "1st Digital",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/1stdigital/sfdusd-contracts.git"
    },
    "bugs": {
        "url": "https://github.com/1stdigital/sfdusd-contracts/issues"
    },
    "homepage": "https://github.com/1stdigital/sfdusd-contracts#readme"
}